<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <property name="autoIncrement" value="false" dbms="postgresql,mssql,oracle"/>
    <property name="autoIncrement" value="true" dbms="h2"/>
    <changeSet id="t_drone_cargo_relation_create" author="vvprokhorenko">
        <preConditions onFail="MARK_RAN">
            <and>
                <not>
                    <tableExists tableName="t_drone_cargo_relation"/>
                </not>
            </and>
        </preConditions>

        <createTable tableName="t_drone_cargo_relation">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="drone_id" type="bigint">
                <constraints nullable="true" foreignKeyName="fk_drone_id" references="t_drone(id)"  deleteCascade="false"/>
            </column>
            <column name="cargo_id" type="bigint">
                <constraints nullable="true" foreignKeyName="fk_cargo_id" references="t_cargo(id)" deleteCascade="true"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>